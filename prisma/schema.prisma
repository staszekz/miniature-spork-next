generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShoppingItem {
  id    String   @id @default(uuid())
  name      String
  quantity  Decimal  @default(1)
  quantityType String
  type      String
  addedAt   DateTime @default(now())
  shoppingList ShoppingList? @relation(fields: [id], references: [id])
}

model ShoppingList {
  id             String        @id @default(uuid())
  items  ShoppingItem[] 
}