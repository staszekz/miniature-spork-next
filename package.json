{
  "name": "miniature-spork",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "migrate:dev": "npx dotenv -e .env.local -- prisma migrate dev",
    "db:push": "npx dotenv -e .env.local -- prisma db push",
    "migrate:reset": "npx dotenv -e .env.local -- prisma migrate reset",
    "db:seed": "npx dotenv -e .env.local -- prisma db seed",
    "prisma:generate": "npx dotenv -e .env.local -- prisma generate",
    "prisma:studio": "npx dotenv -e .env.local -- prisma studio",
    "production:build": "npx prisma generate && npx prisma migrate deploy && next build",
    "test": "jest --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@hookform/resolvers": "^3.3.2",
    "@mantine/code-highlight": "^7.3.0",
    "@mantine/core": "^7.3.0",
    "@mantine/dates": "^7.3.0",
    "@mantine/form": "^7.3.0",
    "@mantine/hooks": "^7.3.0",
    "@mantine/modals": "^7.3.0",
    "@mantine/notifications": "^7.3.0",
    "@mantine/nprogress": "^7.3.0",
    "@mantine/spotlight": "^7.3.0",
    "@prisma/client": "^5.5.2",
    "@sanity/client": "^6.15.3",
    "@sanity/image-url": "^1.0.2",
    "@sanity/vision": "^3.32.0",
    "@tabler/icons-react": "^2.42.0",
    "@types/node": "20.3.1",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.17",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "embla-carousel-react": "^7.1.0",
    "git-cz": "^4.9.0",
    "mantine-react-table": "^1.0.0",
    "next": "14.0.3",
    "next-auth": "^4.24.4",
    "next-sanity": "^7.1.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.47.0",
    "sanity": "^3.32.0",
    "sass": "^1.69.5",
    "styled-components": "^6.1.8",
    "swr": "^2.2.4",
    "typescript": "5.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^13.4.12",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "postcss-preset-mantine": "^1.7.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.0.3",
    "prisma": "5.6.0",
    "tailwindcss": "3.3.6"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off"
    }
  }
}
